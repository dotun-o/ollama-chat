{
  "name": "oolama-chat-ui-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc --watch",

    "prebuild:linux": "rm -rf dist && mkdir dist",
    "prebuild:win": "IF EXIST 'dist' (rmdir /s /q dist) && mkdir dist",
    
    "build:linux": "esbuild ./src/index.ts --bundle --minify --sourcemap --platform=node --target=es2024 --outfile=dist/index.js",
    "build:win": "esbuild ./src/index.ts --bundle --minify --sourcemap --platform=node --target=es2024 --outfile=dist/index.js",
    
    "postbuild:linux": "cd dist && zip -r index.zip index.js*",
    "postbuild:win": "cd dist && tar.exe -a -c -f index.zip index.js*",

    "deploy": "aws"
  },
  "keywords": [],
  "author": "Dotun Ogunsakin <email@dotun.me> (https://dotun.me/)",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "ollama": "^0.5.18"
  }
}
